<script>
    function redirect(number)
    {
        if (number == 1)
            window.open('https://www.quora.com/Is-a-little-cyber-stalking-bad', '_blank');
        else if (number == 2)
            window.open('https://us.norton.com/internetsecurity-privacy-straight-talk-about-cyberstalking.html', '_blank');
        else if (number == 3)
            window.open('https://www.dvrcv.org.au/help-advice/cyber-stalking-and-harassment', '_blank');
    }
    function validate_form()
    {
        let valid = true;
        if (document.getElementById('firstName').value == "" && document.getElementById('secondName').value == "") {
            ShowModalAlert('first and last name must be set')
            valid = false;
        }
        else if (document.getElementById('firstName').value == "") {
            ShowModalAlert('first name must be set')
            valid = false;
        }
        else if (document.getElementById('secondName').value == "")
        {
            ShowModalAlert('first name must be set')
            valid = false;
        }
        return valid;
    }
    function ShowModalAlert(text) {
        document.getElementById('alertModalText').innerHTML = text;
        $('#alertModalWindow').modal('show')
    }
</script>
